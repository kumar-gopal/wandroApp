<% layout("/layouts/boilerplate") %>
<body>
    <h1 class="heading">Edit your Listing</h1><br>
        <div class="row"></div>
        <div class="col-8 offset-2">
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" type="text" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback">
                        title is required
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        description is required
                    </div>
                </div>
                <div class="mb-3">
                    <label for="listing[image]" class="form-label">Enter URL</label>
                    <input name="listing[image]" type="text" value="<%= listing.image %>" class="form-control" required>
                    <div class="invalid-feedback">
                        image-url is required
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="listing[price]" class="form-label">Price</label>
                        <input name="listing[price]" type="number" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback">
                            price is required
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="listing[country]" class="form-label">Country</label>
                        <input name="listing[country]" type="text" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback">
                            country is required
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="listing[location]" class="form-label">Location</label>
                    <input name="listing[location]" type="text" value="<%= listing.location %>" class="form-control" required>
                    <div class="invalid-feedback">
                        location is required
                    </div>
                </div>
                <button class="btn btn-dark edit-btn">Edit</button>
            </form>
        </div>
   </div>
</body>
